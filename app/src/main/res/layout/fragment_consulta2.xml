<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context=".Fragments.ConsultaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_assunto_consulta2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.12"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@drawable/menu" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_consultas_mensagens2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_assunto_mensagem2"
            android:layout_marginTop="@dimen/activity_horizontal_margin" />

        <RelativeLayout
            android:id="@+id/layout_assunto_mensagem2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_enviar_msg2"
                android:layout_width="48dp"
                android:layout_height="48sp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/send" />

            <EditText
                android:id="@+id/et_consulta_mensagem2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/bt_enviar_msg2"
                android:background="@drawable/drawableshape"
                android:hint="Assunto da consulta"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>