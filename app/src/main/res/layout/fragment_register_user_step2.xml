<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegisterUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_menu_login"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_register_nome"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawableshape"
            android:drawableEnd="@drawable/ic_email"
            android:drawableTint="@color/buttons_light_blue"
            android:hint="Nome Completo"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_register_nascimento"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawableshape"
            android:drawableEnd="@drawable/ic_action_key"
            android:drawableTint="@color/buttons_light_blue"
            android:hint="Data nascimento"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="Masculino"
                android:textColor="@color/buttons_light_blue"
                android:textSize="18sp" />

            <com.rey.material.widget.Switch
                android:id="@+id/switch_register_sexo"
                style="@style/Switch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:checked="false"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="Feminino"
                android:textColor="@color/buttons_light_blue"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_proximo2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@color/buttons_light_blue"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="-25dp"
            android:text="PrÃ³ximo"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_voltar2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@color/buttons_light_blue"
            android:drawablePadding="-25dp"
            android:drawableStart="@drawable/ic_arrow_left"
            android:text="Voltar"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>