<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegisterUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_menu_login"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_register_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawableshape"
            android:drawableEnd="@drawable/ic_email"
            android:drawableTint="@color/buttons_light_blue"
            android:hint="E-mail"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawableshape"
            android:drawableEnd="@drawable/ic_action_key"
            android:drawableTint="@color/buttons_light_blue"
            android:hint="Senha"
            android:inputType="numberPassword|textPassword"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_register_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawableshape"
            android:drawableEnd="@drawable/ic_action_key"
            android:drawableTint="@color/buttons_light_blue"
            android:hint="Confime sua senha"
            android:inputType="textPassword|numberPassword"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_proximo1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@color/buttons_light_blue"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="-25dp"
            android:text="PrÃ³ximo"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>