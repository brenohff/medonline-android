<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:context=".Fragments.ResumoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="Consulta"
            android:textColor="@color/buttons_light_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/resumo_assunto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/resumo_medico"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/resumo_especialidade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="DiagnÃ³stico"
            android:textColor="@color/buttons_light_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/resumo_diag_res"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/resumo_diag_desc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="Exame"
            android:textColor="@color/buttons_light_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/resumo_exame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical"
            android:minHeight="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="Receita"
            android:textColor="@color/buttons_light_blue"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/resumo_receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/drawableshape"
            android:gravity="center_vertical"
            android:minHeight="50dp" />

    </LinearLayout>

</ScrollView>